<h2 class="text-center">Listing all articles</h2>
<% @article.each do |article| %>
<div class="well col-sm-offset-2 col-sm-8">
    <%= link_to article.title.titlecase, article_path(article),id: "title_link" %>
  <hr>
    <%= article.description %>
  <hr>
  <%= link_to 'Edit this article' , edit_article_path(article) ,class: "btn btn-xs btn-primary" %>
  <%= link_to 'Delete this articles',article_path(article), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger" %>
</div>
<% end %>
